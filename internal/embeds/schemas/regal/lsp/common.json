{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "regal.lsp.common",
  "$ref": "#/$defs/input",
  "$defs": {
    "input": {
      "properties": {
        "method": {
          "type": "string",
          "description": "The method name for the LSP request"
        },
        "regal": {
          "$ref": "#/$defs/regal"
        }
      },
      "type": "object"
    },
    "regal": {
      "properties": {
        "client": {
          "type": "object",
          "description": "LSP client properties",
          "properties": {
            "capabilities": {
              "type": "object",
              "description": "Capabilities of the LSP client",
              "additionalProperties": true
            },
            "identifier": {
              "type": "integer",
              "description": "Numeric identifier for the LSP client"
            },
            "init_options": {
              "type": "object",
              "description": "Initialization options for the LSP client",
              "properties": {
                "enableDebugCodelens": {
                  "type": "boolean",
                  "description": "Enable the debug code lens on packages and rules. This requires client support."
                }
              },
              "required": [
                "debug_supported"
              ]
            }
          }
        },
        "server": {
          "type": "object",
          "description": "LSP server config and state",
          "properties": {
            "feature_flags": {
              "type": "object",
              "description": "Feature flags state",
              "properties": {
                "debug_provider": {
                  "type": "boolean",
                  "description": "If the server is configured to operate as a debug provider"
                },
                "explorer_provider": {
                  "type": "boolean",
                  "description": "If the server is configured to operate as an explorer provider"
                },
                "inline_eval_provider": {
                  "type": "boolean",
                  "description": "If the server is configured to operate as an inline eval provider"
                }
              },
              "required": [
                "feature_flags"
              ]
            }
          }
        },
        "environment": {
          "type": "object",
          "description": "Environment properties for the LSP client",
          "properties": {
            "workspace_root_uri": {
              "type": "string",
              "description": "URI of the workspace root"
            },
            "workspace_root_path": {
              "type": "string",
              "description": "File system path of the workspace root"
            },
            "web_server_base_uri": {
              "type": "string",
              "description": "Base URI for Regal's local web server server"
            },
            "input_dot_json_path": {
              "type": [
                "string",
                "null"
              ],
              "description": "Path to the input.json file, if found"
            },
            "input_dot_json": {
              "type": [
                "object",
                "null"
              ],
              "description": "Content of the input.json file, if found"
            },
            "path_separator": {
              "type": "string",
              "description": "Path separator used by the operating system (e.g., '/' or '\\')"
            }
          },
          "required": [
            "workspace_root_uri",
            "web_server_base_uri",
            "path_separator"
          ]
        },
        "file": {
          "properties": {
            "abs": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "uri": {
              "type": "string"
            },
            "lines": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "rego_version": {
              "type": "string"
            },
            "successful_parse_count": {
              "type": "integer",
              "description": "Number of lines that were successfully parsed"
            },
            "parse_errors": {
              "type": "array",
              "description": "List of parse errors for the file"
            }
          },
          "type": "object",
          "required": [
            "abs",
            "name",
            "uri",
            "lines",
            "rego_version"
          ]
        }
      },
      "type": "object",
      "required": [
        "client",
        "server",
        "environment",
        "file"
      ]
    }
  }
}
